{
  "name": "electron-typescript-react-tailwind-redux",
  "productName": "electron-typescript-react-tailwind-redux",
  "version": "1.1.4",
  "description": "An electron boilerplate :)",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "lint": "cross-env NODE_ENV=development eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky install .config/husky",
    "commit": "cz",
    "create-icons": "electron-icon-builder --input=./assets/package/source.png --output=./assets/package",
    "package:mac": "electron-forge package --platform darwin",
    "package:linux": "electron-forge package --platform linux",
    "package:win": "electron-forge package --platform win32",
    "make:mac": "electron-forge make --platform darwin",
    "make:linux": "electron-forge make --platform linux",
    "make:win": "electron-forge make --platform win32",
    "publish:mac": "electron-forge publish --platform darwin",
    "publish:linux": "electron-forge publish --platform linux",
    "publish:win": "electron-forge publish --platform win32"
  },
  "keywords": [],
  "author": {
    "name": "daniel",
    "email": "saucesteals@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": "./.config/forge.config.js",
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "singleQuote": false
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "{*.json,.{eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore  --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-dmg": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "@electron-forge/plugin-webpack": "6.0.0-beta.57",
    "@electron-forge/publisher-github": "^6.0.0-beta.57",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/node": "^16.3.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.0.1",
    "@zauberware/eslint-config": "^0.1.9",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.0",
    "dotenv": "^10.0.0",
    "electron": "13.1.6",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^7.6.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "husky": "^7.0.1",
    "node-loader": "^2.0.0",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.1",
    "style-loader": "^2.0.0",
    "svg-url-loader": "^7.1.1",
    "tailwindcss": "^2.2.4",
    "ts-loader": "^9.2.2",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-persist-secure": "^1.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-persist": "^6.0.0"
  }
}
